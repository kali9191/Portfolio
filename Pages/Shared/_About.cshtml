<style>

    #about {
        padding: 120px 20px;
        background: linear-gradient(180deg, #ffffff 0%, #f9fafb 100%);
        position: relative;
        overflow: hidden;
    }

     
    #about::before {
        content: '';
        position: absolute;
        top: 10%;
        right: -5%;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(102, 126, 234, 0.08), transparent 70%);
        border-radius: 50%;
        animation: float-about-1 18s ease-in-out infinite;
    }

    #about::after {
        content: '';
        position: absolute;
        bottom: 15%;
        left: -8%;
        width: 450px;
        height: 450px;
        background: radial-gradient(circle, rgba(118, 75, 162, 0.06), transparent 70%);
        border-radius: 50%;
        animation: float-about-2 22s ease-in-out infinite;
    }

    @@keyframes float-about-1 {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }

        50% {
            transform: translate(-40px, 40px) scale(1.15);
        }
    }

    @@keyframes float-about-2 {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }

        50% {
            transform: translate(50px, -50px) scale(1.1);
        }
    }


    .about-grid-pattern {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: linear-gradient(rgba(102, 126, 234, 0.02) 1px, transparent 1px), linear-gradient(90deg, rgba(102, 126, 234, 0.02) 1px, transparent 1px);
        background-size: 60px 60px;
        animation: gridSlide 25s linear infinite;
    }

    @@keyframes gridSlide {
        0% {
            transform: translate(0, 0);
        }

        100% {
            transform: translate(60px, 60px);
        }
    }


    .about-container {
        max-width: 1100px;
        margin: auto;
        position: relative;
        z-index: 1;
    }

   
    #about h2 {
        font-size: 56px;
        font-weight: 800;
        text-align: center;
        margin-bottom: 20px;
        background: linear-gradient(135deg, #1f2937 0%, #667eea 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: fadeInDown 1s ease-out;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    #about h2::after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(135deg, #667eea 0%, #4c1d95 50%, #000000 100%);
        border-radius: 2px;
    }

    
    .about-subtitle {
        text-align: center;
        color: #6b7280;
        font-size: 18px;
        margin-bottom: 60px;
        animation: fadeIn 1s ease-out 0.3s both;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

   
    .about-layout {
        display: grid;
        grid-template-columns: 1fr 1.2fr;
        gap: 60px;
        align-items: start;
    }

    
    .about-profile {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 32px;
        padding: 45px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), inset 0 1px 0 rgba(255, 255, 255, 0.9);
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        animation: slideInLeft 0.8s ease-out 0.4s both;
        position: sticky;
        top: 100px;
    }

    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .about-profile:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 60px rgba(102, 126, 234, 0.12), inset 0 1px 0 rgba(255, 255, 255, 1);
        border-color: rgba(102, 126, 234, 0.3);
    }

    
    .profile-image-wrapper {
        width: 180px;
        height: 180px;
        margin: 0 auto 30px;
        position: relative;
    }

    .profile-image-wrapper::before {
        content: '';
        position: absolute;
        inset: -10px;
        background: linear-gradient(135deg, #667eea 0%, #4c1d95 50%, #000000 100%);
        border-radius: 50%;
        animation: rotate 10s linear infinite;
        z-index: -1;
    }

    @@keyframes rotate {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .profile-image {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid white;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        transition: transform 0.4s ease;
    }

    .about-profile:hover .profile-image {
        transform: scale(1.05);
    }


    .profile-name {
        text-align: center;
        font-size: 26px;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 10px;
    }

    .profile-title {
        text-align: center;
        font-size: 16px;
        font-weight: 600;
        color: #667eea;
        margin-bottom: 30px;
    }


    .quick-stats {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-top: 30px;
    }

    .stat-box {
        background: rgba(102, 126, 234, 0.05);
        border: 1px solid rgba(102, 126, 234, 0.15);
        border-radius: 16px;
        padding: 20px;
        text-align: center;
        transition: all 0.3s ease;
    }

        .stat-box:hover {
            background: rgba(102, 126, 234, 0.1);
            transform: translateY(-4px);
        }

        .stat-box .number {
            font-size: 28px;
            font-weight: 800;
            color: #667eea;
            display: block;
            margin-bottom: 5px;
        }

        .stat-box .label {
            font-size: 13px;
            color: #6b7280;
            font-weight: 600;
        }

    .download-cv {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-top: 25px;
        padding: 16px 28px;
        background: linear-gradient(135deg, #667eea 0%, #4c1d95 50%, #000000 100%);
        color: white;
        border-radius: 50px;
        font-weight: 700;
        font-size: 15px;
        text-decoration: none;
        transition: all 0.4s ease;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .download-cv:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 28px rgba(102, 126, 234, 0.4);
    }


    .about-text {
        animation: slideInRight 0.8s ease-out 0.5s both;
    }

    @@keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .about-text p {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-left: 4px solid #667eea;
        border-radius: 20px;
        padding: 28px 32px;
        margin-bottom: 25px;
        color: #4b5563;
        font-size: 16px;
        line-height: 1.9;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05), inset 0 1px 0 rgba(255, 255, 255, 0.9);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        animation: fadeInUp 0.6s ease-out both;
    }

        .about-text p:nth-child(1) {
            animation-delay: 0.6s;
        }

        .about-text p:nth-child(2) {
            animation-delay: 0.7s;
        }

        .about-text p:nth-child(3) {
            animation-delay: 0.8s;
        }

        .about-text p:nth-child(4) {
            animation-delay: 0.9s;
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .about-text p:hover {
        transform: translateX(8px);
        border-left-color: #4c1d95;
        box-shadow: 0 8px 32px rgba(102, 126, 234, 0.1), inset 0 1px 0 rgba(255, 255, 255, 1);
    }

    .about-text strong {
        color: #667eea;
        font-weight: 700;
        background: rgba(102, 126, 234, 0.1);
        padding: 2px 8px;
        border-radius: 6px;
    }


    .key-highlights {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 24px;
        padding: 35px;
        margin-top: 35px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), inset 0 1px 0 rgba(255, 255, 255, 0.9);
        animation: fadeIn 1s ease-out 1s both;
    }

    .key-highlights h3 {
        font-size: 22px;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .key-highlights h3::before {
        content: '⚡';
        font-size: 24px;
    }

    .highlights-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }

    .highlight-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        background: rgba(102, 126, 234, 0.05);
        border-radius: 12px;
        color: #4b5563;
        font-size: 14px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .highlight-item::before {
        content: '✓';
        width: 24px;
        height: 24px;
        background: linear-gradient(135deg, #667eea 0%, #4c1d95 50%, #000000 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        flex-shrink: 0;
        font-size: 14px;
    }

    .highlight-item:hover {
        background: rgba(102, 126, 234, 0.1);
        transform: translateX(5px);
    }


    @@media (max-width: 968px) {
        .about-layout {
            grid-template-columns: 1fr;
            gap: 40px;
        }

        .about-profile {
            position: relative;
            top: 0;
        }

        .highlights-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        #about {
            padding: 80px 20px;
        }

            #about h2 {
                font-size: 40px;
            }

        .about-subtitle {
            font-size: 16px;
            margin-bottom: 40px;
        }

        .about-profile {
            padding: 35px 25px;
        }

        .profile-image-wrapper {
            width: 150px;
            height: 150px;
        }

        .profile-name {
            font-size: 24px;
        }

        .about-text p {
            padding: 22px 24px;
            font-size: 15px;
        }

        .key-highlights {
            padding: 25px 20px;
        }

        .quick-stats {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 480px) {
        #about h2 {
            font-size: 32px;
        }

        .about-text p {
            padding: 18px 20px;
            font-size: 14px;
        }

        .stat-box .number {
            font-size: 24px;
        }
    }
</style>

