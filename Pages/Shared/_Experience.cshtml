<style>

    #experience {
        padding: 120px 20px;
        background: linear-gradient(135deg, #667eea 0%, #4c1d95 50%, #000000 100%);
        position: relative;
        overflow: hidden;
    }

      
    #experience::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        /* background: radial-gradient(circle at 15% 25%, rgba(255, 255, 255, 0.1), transparent 35%), radial-gradient(circle at 85% 75%, rgba(255, 255, 255, 0.08), transparent 40%), radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.05), transparent 50%); */
        animation: pulse-bg 10s ease-in-out infinite;
    }

    @@keyframes pulse-bg {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.8;
            transform: scale(1.05);
        }
    }

   
    .experience-shapes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
    }

    .exp-shape {
        position: absolute;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
    }

    .exp-shape-1 {
        width: 250px;
        height: 250px;
        top: 15%;
        right: 10%;
        animation: float-shape-1 18s infinite ease-in-out;
    }

    .exp-shape-2 {
        width: 180px;
        height: 180px;
        bottom: 20%;
        left: 8%;
        animation: float-shape-2 22s infinite ease-in-out;
    }

    @@keyframes float-shape-1 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }

        50% {
            transform: translate(-40px, 40px) rotate(180deg);
        }
    }

    @@keyframes float-shape-2 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }

        50% {
            transform: translate(50px, -50px) rotate(-180deg);
        }
    }


    .experience-container {
        max-width: 1000px;
        margin: auto;
        position: relative;
        z-index: 1;
    }


    #experience h2 {
        font-size: 56px;
        font-weight: 800;
        color: white;
        text-align: center;
        margin-bottom: 20px;
        background: none;
        -webkit-text-fill-color: white;
        animation: fadeInDown 1s ease-out;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    #experience h2::after {
        display: none;
    }


    .experience-subtitle {
        text-align: center;
        color: rgba(255, 255, 255, 0.9);
        font-size: 18px;
        margin-bottom: 60px;
        animation: fadeIn 1s ease-out 0.3s both;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }


    .experience-card {
        
       
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 32px;
        padding: 50px 45px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.4);
        position: relative;
        overflow: hidden;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        animation: scaleIn 0.8s ease-out 0.5s both;
        margin-bottom: 30px;
    }

    @@keyframes scaleIn {
        from {
            opacity: 0;
            transform: scale(0.95) translateY(30px);
        }

        to {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }

    .experience-card:hover {
        transform: translateY(-10px);
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.5);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.6);
    }

   
    .experience-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient( 90deg, transparent, rgba(255, 255, 255, 0.3), transparent );
        transition: left 0.7s ease;
    }

    .experience-card:hover::before {
        left: 100%;
    }


    .company-icon {
        width: 70px;
        height: 70px;
        background: rgba(255, 255, 255, 0.2);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        margin-bottom: 25px;
        transition: all 0.4s ease;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .experience-card:hover .company-icon {
        transform: rotateY(360deg) scale(1.1);
        background: rgba(255, 255, 255, 0.3);
    }

    .experience-card h4 {
        font-size: 28px;
        font-weight: 800;
        color: white;
        margin-bottom: 12px;
        line-height: 1.3;
    }

    .experience-card h5 {
        color: rgba(255, 255, 255, 0.9);
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .experience-card h5::before {
        content: '🏛️';
        font-size: 20px;
    }


    .duration {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(255, 255, 255, 0.2);
        padding: 10px 20px;
        border-radius: 50px;
        font-size: 14px;
        font-weight: 600;
        color: white;
        margin-bottom: 30px;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .duration::before {
        content: '📅';
        font-size: 16px;
    }


    .current-badge {
        position: absolute;
        top: 30px;
        right: 30px;
        background: rgba(16, 185, 129, 0.9);
        color: white;
        font-size: 12px;
        font-weight: 700;
        padding: 8px 18px;
        border-radius: 20px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 6px;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

    .current-badge::before {
        content: '';
        width: 8px;
        height: 8px;
        background: white;
        border-radius: 50%;
        animation: pulse-dot 2s infinite;
    }

    @@keyframes pulse-dot {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.6;
            transform: scale(1.2);
        }
    }

    .experience-card ul {
        padding-left: 0;
        list-style: none;
        margin-top: 25px;
    }

    .experience-card li {
        color: rgba(255, 255, 255, 0.95);
        font-size: 16px;
        line-height: 1.8;
        margin-bottom: 16px;
        padding-left: 35px;
        position: relative;
        transition: all 0.3s ease;
    }

    .experience-card li:hover {
        color: white;
        transform: translateX(5px);
    }

    .experience-card li::before {
        content: '▹';
        position: absolute;
        left: 0;
        color: #fbbf24;
        font-size: 24px;
        font-weight: bold;
        top: -2px;
    }


    .experience-card strong {
        color: #fde68a;
        font-weight: 700;
        background: rgba(251, 191, 36, 0.15);
        padding: 2px 8px;
        border-radius: 6px;
    }

    .tech-stack {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 30px;
        padding-top: 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

    .tech-badge {
        background: rgba(251, 191, 36, 0.2);
        color: #fde68a;
        font-size: 13px;
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 20px;
        border: 1px solid rgba(251, 191, 36, 0.3);
        transition: all 0.3s ease;
    }

    .tech-badge:hover {
        background: rgba(251, 191, 36, 0.9);
        color: #1f2937;
        transform: translateY(-2px);
    }


    .experience-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin-top: 35px;
        padding-top: 35px;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

    .stat-item {
        text-align: center;
        padding: 20px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }

    .stat-item:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateY(-4px);
    }

    .stat-item .number {
        font-size: 32px;
        font-weight: 800;
        color: white;
        display: block;
        margin-bottom: 8px;
    }

    .stat-item .label {
        font-size: 13px;
        color: rgba(255, 255, 255, 0.8);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }


    @@media (max-width: 768px) {
        #experience {
            padding: 80px 20px;
        }

            #experience h2 {
                font-size: 40px;
            }

        .experience-subtitle {
            font-size: 16px;
            margin-bottom: 40px;
        }

        .experience-card {
            padding: 35px 30px;
            border-radius: 24px;
        }

        .experience-card h4 {
            font-size: 24px;
        }

        .experience-card h5 {
            font-size: 16px;
        }

        .current-badge {
            top: 20px;
            right: 20px;
            font-size: 11px;
            padding: 6px 14px;
        }

        .company-icon {
            width: 60px;
            height: 60px;
            font-size: 28px;
        }

        .experience-card li {
            font-size: 15px;
            padding-left: 30px;
        }

        .experience-stats {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 480px) {
        #experience h2 {
            font-size: 32px;
        }

        .experience-card {
            padding: 25px 20px;
        }

        .experience-card h4 {
            font-size: 22px;
        }

        .experience-card h5 {
            font-size: 15px;
        }

        .experience-card li {
            font-size: 14px;
        }

        .experience-stats {
            grid-template-columns: 1fr;
        }
    }
</style>

