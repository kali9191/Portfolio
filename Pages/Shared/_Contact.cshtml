<style>

    #contact {
        padding: 120px 20px;
        background: linear-gradient(180deg, #f9fafb 0%, #ffffff 100%);
        position: relative;
        overflow: hidden;
    }


    #contact::before {
        content: '';
        position: absolute;
        top: -20%;
        left: -10%;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(102, 126, 234, 0.08), transparent 70%);
        border-radius: 50%;
        animation: float-contact-1 20s ease-in-out infinite;
    }

    #contact::after {
        content: '';
        position: absolute;
        bottom: -25%;
        right: -8%;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(118, 75, 162, 0.06), transparent 70%);
        border-radius: 50%;
        animation: float-contact-2 18s ease-in-out infinite;
    }

    @@keyframes float-contact-1 {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }

        50% {
            transform: translate(40px, -40px) scale(1.15);
        }
    }

    @@keyframes float-contact-2 {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }

        50% {
            transform: translate(-30px, 30px) scale(1.1);
        }
    }

   
    .contact-container {
        max-width: 1200px;
        margin: auto;
        position: relative;
        z-index: 1;
    }

    #contact h2 {
        font-size: 56px;
        font-weight: 800;
        text-align: center;
        margin-bottom: 20px;
        background: linear-gradient(135deg, #1f2937 0%, #667eea 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: fadeInDown 1s ease-out;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    #contact h2::after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(135deg, #667eea 0%, #4c1d95 50%, #000000 100%);
        border-radius: 2px;
    }


    .contact-intro {
        text-align: center;
        color: #6b7280;
        font-size: 18px;
        max-width: 700px;
        margin: 30px auto 70px;
        line-height: 1.8;
        animation: fadeIn 1s ease-out 0.3s both;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 50px;
        align-items: start;
    }

    .contact-form {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 32px;
        padding: 50px 45px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), inset 0 1px 0 rgba(255, 255, 255, 0.9);
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        animation: slideInLeft 0.8s ease-out 0.4s both;
    }

    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .contact-form:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 60px rgba(102, 126, 234, 0.12), inset 0 1px 0 rgba(255, 255, 255, 1);
        border-color: rgba(102, 126, 234, 0.3);
    }
    .contact-form::before {
        content: '💌';
        font-size: 48px;
        display: block;
        margin-bottom: 20px;
        animation: bounce 2s ease-in-out infinite;
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }


    .form-group {
        margin-bottom: 25px;
    }


    .contact-form input,
    .contact-form textarea {
        width: 100%;
        padding: 18px 24px;
        border: 2px solid rgba(102, 126, 234, 0.2);
        border-radius: 16px;
        font-size: 15px;
        font-family: inherit;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.6);
        color: #1f2937;
    }

        .contact-form input::placeholder,
        .contact-form textarea::placeholder {
            color: #9ca3af;
        }

        .contact-form input:focus,
        .contact-form textarea:focus {
            outline: none;
            border-color: #667eea;
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

    .contact-form textarea {
        resize: vertical;
        min-height: 140px;
    }


    .contact-form button {
        width: 100%;
        padding: 18px 32px;
        background: linear-gradient(135deg, #667eea 0%, #4c1d95 50%, #000000 100%);
        color: white;
        border: none;
        border-radius: 16px;
        font-size: 16px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.4s ease;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
    }

        .contact-form button::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.2);
            transform: translateX(-100%);
            transition: transform 0.4s ease;
        }

        .contact-form button:hover::before {
            transform: translateX(100%);
        }

        .contact-form button:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 28px rgba(102, 126, 234, 0.4);
        }

        .contact-form button:active {
            transform: translateY(-1px);
        }


    .contact-social {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 32px;
        padding: 50px 45px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), inset 0 1px 0 rgba(255, 255, 255, 0.9);
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        animation: slideInRight 0.8s ease-out 0.4s both;
    }

    @@keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .contact-social:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 60px rgba(102, 126, 234, 0.12), inset 0 1px 0 rgba(255, 255, 255, 1);
        border-color: rgba(102, 126, 234, 0.3);
    }


    .contact-social h3 {
        font-size: 28px;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 30px;
        background: linear-gradient(135deg, #1f2937 0%, #667eea 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }


    .contact-social ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .contact-social li {
        margin-bottom: 20px;
        animation: fadeInUp 0.6s ease-out both;
    }

    .contact-social li:nth-child(1) {
        animation-delay: 0.5s;
    }

    .contact-social li:nth-child(2) {
        animation-delay: 0.6s;
    }

    .contact-social li:nth-child(3) {
        animation-delay: 0.7s;
    }

    .contact-social li:nth-child(4) {
        animation-delay: 0.8s;
    }

    .contact-social li:nth-child(5) {
        animation-delay: 0.9s;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .contact-social a {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 20px 24px;
        background: rgba(102, 126, 234, 0.05);
        border: 2px solid rgba(102, 126, 234, 0.15);
        border-radius: 16px;
        text-decoration: none;
        color: #1f2937;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .contact-social a::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
        transition: left 0.5s ease;
    }

    .contact-social a:hover::before {
        left: 100%;
    }

    .contact-social a:hover {
        background: rgba(102, 126, 234, 0.1);
        border-color: rgba(102, 126, 234, 0.4);
        transform: translateX(10px);
        box-shadow: 0 8px 24px rgba(102, 126, 234, 0.15);
    }


    .contact-social a::after {
        content: '→';
        font-size: 20px;
        margin-left: auto;
        transition: transform 0.3s ease;
        color: #667eea;
    }

    .contact-social a:hover::after {
        transform: translateX(5px);
    }

    .contact-social a span {
        color: #667eea;
        font-weight: 700;
    }

    
    .success-message {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        padding: 16px 24px;
        border-radius: 12px;
        border: 2px solid rgba(16, 185, 129, 0.3);
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 600;
        animation: slideDown 0.5s ease-out;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .success-message::before {
        content: '✓';
        width: 30px;
        height: 30px;
        background: #10b981;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        flex-shrink: 0;
    }

    @@media (max-width: 968px) {
        .contact-grid {
            grid-template-columns: 1fr;
            gap: 40px;
        }
    }

    @@media (max-width: 768px) {
        #contact {
            padding: 80px 20px;
        }

        #contact h2 {
            font-size: 40px;
        }

        .contact-intro {
            font-size: 16px;
            margin-bottom: 50px;
        }

        .contact-form,
        .contact-social {
            padding: 35px 30px;
            border-radius: 24px;
        }

        .contact-form::before {
            font-size: 40px;
        }

        .contact-social h3 {
            font-size: 24px;
        }

        .contact-social a {
            padding: 16px 20px;
            font-size: 15px;
        }
    }

    @@media (max-width: 480px) {
        #contact h2 {
            font-size: 32px;
        }

        .contact-form,
        .contact-social {
            padding: 25px 20px;
        }

            .contact-form input,
            .contact-form textarea {
                padding: 14px 18px;
                font-size: 14px;
            }

            .contact-form button {
                padding: 16px 24px;
                font-size: 15px;
            }
    }
</style>

