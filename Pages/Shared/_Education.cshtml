<script>
    document.querySelectorAll('.education-content').forEach(content => {
        const dot = content.nextElementSibling;

        content.addEventListener('mouseenter', () => {
            if (dot && dot.classList.contains('timeline-dot')) {
                dot.style.transform = 'scale(1.3)';
                dot.style.boxShadow = '0 0 0 8px rgba(102, 126, 234, 0.3)';
            }
        });

        content.addEventListener('mouseleave', () => {
            if (dot && dot.classList.contains('timeline-dot')) {
                dot.style.transform = 'scale(1)';
                dot.style.boxShadow = '0 0 0 4px rgba(102, 126, 234, 0.2)';
            }
        });
    });
    const observeEducation = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, {
        threshold: 0.1,
        rootMargin: '0px 0px -100px 0px'
    });

    document.querySelectorAll('.education-item').forEach(item => {
        observeEducation.observe(item);
    });
</script>