        -webkit-text-fill-color: transparent;
        background-clip: text;
        position: relative;
        display: inline-block;
        width: 100%;
    }

    .section h2::after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
