    .navbar {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 9999;
        padding: 15px 0;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

 
    .navbar.transparent {
        background: transparent;
    }


    .navbar.scrolled {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
